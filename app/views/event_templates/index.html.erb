<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All events
    </h1>

    <a href="/events/new" class="btn btn-block btn-outline-success">
      Add a new event
    </a>
  </div>
</div>


<% @events.each do |event| %>
<div class="row mb-5">
  <div class="col-md-8 offset-md-2">
    <div class="card">
      <div class="card-header">
    <h5 class="card-title"><%= event.name %></h5>
    <p class="card-text"><%= event.description %></p>
    <p><a href="<%= event.link %>" class="btn btn-primary" target="_blank">Wikipedia</a></p>
    <p><a href="/events/<%= event.id %>"class="btn btn-primary"> Show details</a></p>
  </div>
</div>
</div>
</div>

<% end %>