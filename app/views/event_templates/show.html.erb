<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      <%= @event.name %> Details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/events" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/events/<%= @event.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit event
        </a>
      </div>

      <div class="col">
        <a href="/delete_event/<%= @event.id %>" class="btn btn-block btn-outline-secondary">
          Delete event
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @event.name %>
      </dd>

      <dt>
        Description
      </dt>
      <dd>
        <%= @event.description %>
      </dd>

      <dt>
        Link
      </dt>
      <dd>
        <a href="<%= @event.link %>"  target="_blank">Wikipedia</a>
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@event.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

