<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      <%= @race.name %> Details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/races" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/races/<%= @race.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit race
        </a>
      </div>

      <div class="col">
        <a href="/delete_race/<%= @race.id %>" class="btn btn-block btn-outline-secondary">
          Delete race
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @race.name %>
      </dd>

      <dt>
        Event
      </dt>
      <% if @race.event.present? %>
          <a href="/events/<%= @race.event_id %>">
            <%= @race.event.name %>
          </a>
        <% end %>

      <dt>
        Location
      </dt>
      <dd>
        <%= @race.location %>
      </dd>
      
      <dd>
        <a href= "<%= @race.link %>"target="_blank">Check out the Website</a>
      </dd>
      
    </dl>
  </div>
</div>

<script src="https://maps.googleapis.com/maps/api/js?v=3.exp&key=AIzaSyB_nAWVr-18Oi_XoadzVHmNT2vevvJfev4"></script>
<script>
  var map;
  function initialize() {
    var myLatlng = new google.maps.LatLng(<%= @latitude %>, <%= @longitude %>);
    var mapOptions = {
      zoom: 15,
      center: myLatlng
    };
    map = new google.maps.Map(document.getElementById('map-canvas'),
    mapOptions);
    var marker = new google.maps.Marker({
      position: myLatlng,
      map: map,
      title: 'Statue of Liberty'
    });
  }
  google.maps.event.addDomListener(window, 'load', initialize);
</script>
<div id="map-canvas" style="width: 100%; height: 400px"></div>